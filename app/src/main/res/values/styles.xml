<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textViewStyle">@style/MyTextView</item>
        <item name="android:radioButtonStyle">@style/MyRadioButton</item>
        <item name="android:scrollViewStyle">@style/MyScrollableLayout</item>
        <item name="editTextStyle">@style/MyEditText</item>
        <item name="checkboxStyle">@style/MyCheckbox</item>
    </style>

        <style name="MyTextView" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#F2F1EF</item>
        </style>

        <style name="MyRadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#F2F1EF</item>
            <item name="android:buttonTint">@color/colorText</item>
        </style>

        <style name="MyScrollableLayout" parent="android:Widget.ScrollView">
        <item name="android:background">@color/colorBackground</item>
        </style>

        <style name="MyCheckbox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#F2F1EF</item>
            <item name="android:buttonTint">@color/colorText</item>
        </style>

        <style name="MyEditText" parent="android:Widget.EditText">
            <item name="android:background">#F2F1EF</item>
            <item name="android:textColor">@color/colorBackground</item>
            <item name="android:textSize">20sp</item>
        </style>
</resources>
